package com.heaven.blocks.ores;

import java.util.Random;

import net.minecraft.init.Blocks;
import net.minecraft.world.World;
import net.minecraft.world.chunk.IChunkProvider;
import net.minecraft.world.gen.feature.WorldGenMinable;

import com.heaven.blocks.BlockHandler;
import com.jcraft.jorbis.Block;

import cpw.mods.fml.common.IWorldGenerator;


public class SkyStoneGenerator implements IWorldGenerator {

	@Override
	public void generate(Random random, int chunkX, int chunkZ, World world,
			IChunkProvider chunkGenerator, IChunkProvider chunkProvider) {
		switch(world.provider.dimensionId)
		{
		case -1:
			generateNether(world, random, chunkX*16, chunkZ*16);
			break;
		case 0: 
			generateSurface(world, random, chunkX*16, chunkZ*16);
			break;
		}
	}

	private void AddOre(net.minecraft.block.Block block, Random random, World world, int Xcoords, int Zcoords,  int minYcoords, int maxYcoords, int minVien, int maxVien, int spawnChance)
	{
		for(int i = 0; i < spawnChance; i++)
		{
			int deflautChunkSize = 16;
			
			int xPos = Xcoords + random.nextInt(deflautChunkSize);
			int yPos = minYcoords + random.nextInt(maxYcoords - minYcoords);
			int zPos = Zcoords + random.nextInt(deflautChunkSize);
			
			new WorldGenMinable(block, minVien + random.nextInt(maxVien - minVien)).generate(world, random, xPos, yPos, zPos);
		}
	}
	
	private void AddOre(net.minecraft.block.Block block, net.minecraft.block.Block changeBlock, Random random, World world, int Xcoords, int Zcoords,  int minYcoords, int maxYcoords, int minVien, int maxVien, int spawnChance)
	{
		for(int i = 0; i < spawnChance; i++)
		{
			int deflautChunkSize = 16;
			
			int xPos = Xcoords + random.nextInt(deflautChunkSize);
			int yPos = minYcoords + random.nextInt(maxYcoords - minYcoords);
			int zPos = Zcoords + random.nextInt(deflautChunkSize);
			
			new WorldGenMinable(block, minVien + random.nextInt(maxVien - minVien), changeBlock).generate(world, random, xPos, yPos, zPos);
		}
	}
	
	private void generateNether(World world, Random random, int chunkX, int chunkZ) 
	{
		AddOre(BlockHandler.SkyStone, Blocks.netherrack, random, world, chunkX, chunkZ, 5, 256, 40, 50, 50);
	}

	private void generateSurface(World world, Random random, int chunkX, int chunkZ)
	{
		for(int i = 0; i < 50; i++)
		{
			int deflautChunkSize = 16;
			
			int xPos = Xcoords + random.nextInt(deflautChunkSize);
			int yPos = minYcoords + random.nextInt(maxYcoords - minYcoords);
			int zPos = Zcoords + random.nextInt(deflautChunkSize);
			
			new WorldGenMinable(BlockHandler.SkyStone, 50, Blocks.stone).generate(world, random, xPos, yPos, zPos);
		}
	}
}
