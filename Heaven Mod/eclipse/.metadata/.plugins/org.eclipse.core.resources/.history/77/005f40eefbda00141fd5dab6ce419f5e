	public void onNeighbourBlockChange(World world, int x, int y, int z, Block block)
	{
		byte b0 = 0;
		byte b1 = 1;
		
		if(world.getBlock(x -1, y, z) == BlockHandler.SkyStone || world.getBlock(x + 1, y, z) == BlockHandler.SkyStone)
		{
			b0 = 0;
			b1 = 1;
		}
	}
